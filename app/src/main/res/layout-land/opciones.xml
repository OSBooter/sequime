<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sms"
                    android:textAlignment="textEnd"
                    android:padding="10sp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/opciones_sms"
                    android:inputType="phone"
                    android:background="@drawable/borderedondeado"
                    android:padding="10sp"
                    android:layout_margin="2sp"
                    />


            </TableRow>
            <TableRow>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/id_telegram"
                    android:textAlignment="textEnd"
                    android:padding="10sp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/opciones_telegram"
                    android:inputType="phone"
                    android:background="@drawable/borderedondeado"
                    android:padding="10sp"
                    android:layout_margin="2sp"
                    />


            </TableRow>
            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/intervalo_actividad"
                    android:textAlignment="textEnd"
                    android:padding="10sp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/opciones_actividad"
                    android:inputType="number"
                    android:background="@drawable/borderedondeado"
                    android:padding="10sp"
                    android:layout_margin="2sp"
                    />


            </TableRow>

            <TableRow>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/intervalo_inactividad"
                    android:textAlignment="textEnd"
                    android:padding="10sp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/opciones_inactividad"
                    android:inputType="number"
                    android:background="@drawable/borderedondeado"
                    android:padding="10sp"
                    android:layout_margin="2sp"
                    />


            </TableRow>

            <TableRow>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/opciones_rastreo"
                    android:text = "@string/rastreo"

                    android:padding="10sp"
                    android:layout_margin="2sp"
                    />


            </TableRow>
        </TableLayout>

    </ScrollView>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1"
        >
        <TableRow>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guardar"
                android:onClick="guardar"
                android:background="@drawable/botonredondeado"
                android:textColor="@android:color/white"
                android:layout_margin="2sp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="cancelar"
                android:text="@string/cancelar"
                android:background="@drawable/botonredondeadorojo"
                android:textColor="@android:color/white"
                android:layout_margin="2sp"
                />

        </TableRow>
    </TableLayout>
</LinearLayout>
