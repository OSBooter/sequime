<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"

    tools:context="pc.javier.seguime.ActividadAyuda"
    >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "Seguime \n Version 0.1"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/version"
                android:textAlignment="center"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_donacion"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/ayuda_donacion"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:text="Ir al Sitio Web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:onClick="sitio"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:text="Invitame un cafe :) \n ... con leche \n ... y medialunas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:onClick="donar"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_ayuda_descripcion"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/ayuda_descripcion"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_licencia"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/ayuda_licencia"
                />




        </LinearLayout>



</ScrollView>
