<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pc.javier.seguime.ActividadRegresiva"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"



        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:padding="10dp"
        >


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"



            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:id="@+id/regresiva_layoutprincipal"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/regresiva_layout_mensaje"


                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintBottom_toTopOf="@+id/regresiva_layout_temporizador"

                android:padding="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sms"
                    android:padding="5dp"

                    />

                <EditText
                    android:id="@+id/temporizador_sms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:background="@drawable/borderedondeado"
                    android:inputType="phone"
                    android:onClick="mostrarContactos"
                    android:padding="10sp"
                    android:text="" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mensajealerta"
                    android:padding="5dp"
                    />

                <EditText
                    android:id="@+id/temporizador_texto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="2sp"
                    android:background="@drawable/borderedondeado"
                    android:lines="2"
                    android:minLines="3"
                    android:padding="10sp"
                    android:scrollbars="vertical"
                    android:text="@string/alarmamensaje" />


            </LinearLayout>





            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/regresiva_layout_temporizador"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/regresiva_layout_mensaje"

                app:layout_constraintBottom_toTopOf="@+id/temporizador_boton"

                android:padding="10dp"

                >

                    <LinearLayout
                        android:id="@+id/regresiva_layout_hora"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:orientation="vertical"
                        app:layout_constraintEnd_toStartOf="@+id/regresiva_layout_minuto"
                        app:layout_constraintStart_toStartOf="parent"
                        >

                        <NumberPicker
                            android:id="@+id/temporizador_hora"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/hora"
                            android:textAlignment="center" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/regresiva_layout_minuto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:orientation="vertical"
                        app:layout_constraintEnd_toStartOf="@+id/regresiva_layout_segundo"
                        app:layout_constraintStart_toEndOf="@id/regresiva_layout_hora"
                        >


                        <NumberPicker
                            android:id="@+id/temporizador_minuto"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/minuto"
                            android:textAlignment="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/regresiva_layout_segundo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/regresiva_layout_minuto"
                        >

                        <NumberPicker
                            android:id="@+id/temporizador_segundo"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/segundo"
                            android:textAlignment="center" />
                    </LinearLayout>

                </android.support.constraint.ConstraintLayout>













            <Button
                android:id="@+id/temporizador_boton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/botonredondeado"
                android:onClick="clickBoton"
                android:text="@string/iniciar"
                android:textColor="#ffffff"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/regresiva_layout_temporizador"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                android:layout_margin="10dp"
                />


        </android.support.constraint.ConstraintLayout>


    </ScrollView>
</android.support.constraint.ConstraintLayout>
