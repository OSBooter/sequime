<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        >






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >





















            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="1"

                >




                <TableRow android:gravity="center_vertical">

                    <ToggleButton
                        android:id="@+id/opciones_panico_permtir_activar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text= "@string/permitir_activar_boton_panico"
                        android:padding="5dp"
                        android:textSize="@dimen/texto"
                        />

                </TableRow>









                <TableRow android:gravity="center_vertical">
                    <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:enabled="false"
                        android:checked="true"
                    />
					
					<TextView
                    android:id="@+id/opcionesTexto_iniciarconsistema"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/rastreo"
                        android:padding="5dp"
                        android:textSize="@dimen/texto"
                     />

					</TableRow>











                <TableRow android:visibility="visible">

                    <ToggleButton
                        android:id="@+id/opciones_panico_bloquear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bloquear"
                        android:padding="5dp"
                        android:textSize="@dimen/texto"
                        />


                </TableRow>





            </TableLayout>





























    </LinearLayout>








    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1"

        >
        <TableRow android:gravity="center_vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guardar"
                android:onClick="guardar"
                android:background="@drawable/botonredondeado"
                android:textColor="@android:color/white"
                android:layout_margin="2dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="cancelar"
                android:text="@string/cancelar"
                android:background="@drawable/botonredondeadorojo"
                android:textColor="@android:color/white"
                android:layout_margin="2dp"
                />

        </TableRow>
    </TableLayout>

    </LinearLayout>
</ScrollView>
